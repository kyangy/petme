<div id="main">
	<%= render "shared/menu" %>
	<div class="container-fluid">
		<section class="primary">
			<div id="search">
				<h1>Buy pets around your location</h1>
				<h3>Contact owners, see images, and choose your preference</h3>
				<%= form_tag(list_path, method: "get") do %>

					<%= select_tag "type", options_from_collection_for_select(TYPES, "to_s", "to_s") %>
					<%= select_tag "gender", options_from_collection_for_select(GENDERS, "to_s", "to_s") %>
					<%= select_tag "age", options_from_collection_for_select(AGES, "to_s", "to_s") %>
					<%= submit_tag "Submit" %>

				<% end %>
			</div>
		</section>
	</div>
</div>







