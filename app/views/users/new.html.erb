<div class="primary">
	<div>
		<h1>Sign Up</h1>

		<%= form_for @user do |f| %>

			<div class="form_control input-lg">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>

			<div class="form_control input-lg">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>

			<div class="form_control input-lg">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>

			<div>
				<%= f.submit "Sign me up!" %>
			</div>

		<% end %>
	</div>
</div>