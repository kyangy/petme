<div id="login">
	<%= render "shared/menu" %>

	<div class="primary">
		<div>
			<h1>Log In</h1>

			<%= form_for :login do |f| %>

				<div class="form_control input-lg">
					<%= f.label :email %>
					<%= f.text_field :email %>
				</div>

				<div class="form_control input-lg">
					<%= f.label :password %>
					<%= f.password_field :password %>
				</div>

				<div>
					<%= f.submit "Log In" %>
				</div>

			<% end %>
		</div>
	</div>
</div>