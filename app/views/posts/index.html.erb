<%= render "shared/menu" %>

<h1><%= params[:type] %></h1>
<h2><%= params[:gender] %></h2>
<h3><%= params[:age] %></h3>

<% @posts.each do |post| %>

	<%= link_to "more info", post_path(:id) %>
	<div>
		<%= image_tag post.image.url %>
	</div>

	<div>
		Breed: <%= post.breed %>
	</div>

	<div>
		<%= post.user["email"] %>
	</div>


<% end %>