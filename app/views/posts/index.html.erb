<div class="nav-border">
	<%= render "shared/menu" %>
</div>

<h1><%= params[:type] %></h1>
<h2><%= params[:gender] %></h2>
<h3><%= params[:age] %></h3>

<div id="img-window">
	<% @posts.each do |post| %>

			<%= image_tag post.image.url, :size => "360x280", :crop => :fill %>
		<div>
			Breed: <%= post.breed %>
		</div>

		<div>
			<%= post.user["email"] %>
		</div>

		<div>
			<%= link_to "More Info", post_path(post) %>
		</div>

	<% end %>
</div>


