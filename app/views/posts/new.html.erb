<%= render "shared/menu" %>

<div class="row">
	<div class="col-md-3 col-md-offset-3" id="addsection">
		<h1>Add a pet!</h1>

		<div>
		<%= form_for @post do |f| %>

			<div>
				<%= f.label :type, "Type:" %>
				<%= f.select :type, TYPES %>
			</div>
			<div>
				<%= f.label :gender, "Gender:" %>
				<%= f.select :gender, GENDERS %>
			</div>
			<div>
				<%= f.label :age, "Age:" %>
				<%= f.select :age, AGES %>
			</div>
			<div>	
				<%= f.label :breed, "Breed:" %>
				<%= f.text_field :breed %>
			</div>
			<div>
				<%= f.label :price, "Price:" %>
				<%= f.text_field :price %>
			</div>

			<div>
			<%= f.label :image, "Image:" %>
			<%= f.file_field :image %>
			</div>
			<div>
			<%= f.submit "Post this pet" %>
			</div>

		<% end %>

		</div>
	</div>
</div>
