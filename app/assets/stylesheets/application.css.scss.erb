 @import "bootstrap-sprockets";
 @import "bootstrap";

html,
body {
	width: 100%;
	height: 100%;
}

 #main {
 	background: url(<%= image_path 'dog.jpg' %>);
 	width: 100%;
 	height: 100%;
 	background-size: cover;
 }

#nav-bar {
	float: right;
	margin-top: 20px;
	margin-right: 40px;
	div {
		display: inline-block;
 		padding: 5px;
	}
}

 header a {
 	text-decoration: none;
 }

 #logo {
 	display: inline-block;
 	margin-left: 50px;
 	color: white;
 }

 #search {
 	display: inline-block;
 	text-align: center;
 }

 #search h1, h3 {
 	color: white;
 }

 .primary {
 	text-align: center;
 	margin-top: 100px;
 }



