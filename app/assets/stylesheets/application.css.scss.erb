 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import url('//fonts.googleapis.com/css?family=Bubblegum+Sans|Permanent+Marker|Open+Sans+Condensed:300|Courgette|Indie+Flower');

html,
body {
	width: 100%;
	height: 100%;
}

@mixin background {
	width: 100%;
 	height: 100%;
 	background-size: cover;
}

@mixin hover {
	text-decoration: none;
} 

#main {
 	background: url(<%= image_path 'dog.jpg' %>);
 	@include background;
 }

#nav-bar {
	float: right;
	margin-top: 20px;
	margin-right: 40px;
	div {
		display: inline-block;
 		padding: 5px;
	}
	a:hover {
		@include hover;
	}
}

 header a {
 	text-decoration: none;
 }

 #logo {
 	display: inline-block;
 	margin-left: 50px;
 	color: white;
 	font-family: 'Courgette', cursive;
 	a:hover {
 		@include hover;
 	}
 }

 #search {
 	display: inline-block;
 	text-align: center;
 	h1,
 	h3 {
 		color: white;
 	}
 }

 .primary {
 	text-align: center;
 	margin-top: 100px;
 }

 .snake {
 	background-image: image-url("scale.jpg");
 	@include background;
 	color: white;
 }

 #addbackground {
 	background: url(<%= image_path 'fur.jpg' %>);
 	@include background;
 	font-family: 'Bubblegum Sans', cursive;
 	border-top: 3px solid;
 }

 #cat {
 	background: url(<%= image_path 'cat.jpg' %>);
 	@include background;
 	height: 650px;
 }

 #cat-page {
 	margin-top: 250px;
 	color: white;
 }

 #secondary {
 	background-color: #696969;
 	padding: 30px;
 	color: #FFA500;
 }

 #img-window {
	height: 455px;
	overflow-y: auto;
	margin-left: 20px;
	padding: 20px;
	img {
		border: 2px solid;
	}
 }

 .nav-black{
 	border-bottom: 3px solid;
 	background-color: black;
 	a {
 		color: white;
 	}
 }

 .nav-border {
 	border-bottom: 3px solid;
 }

 .part {
 	background-color: black;
 	padding: 30px;
 	border-radius: 30px;
 	margin-top: 50px;
 	border: 2px solid;
 }

 #list-name {
 	margin-left: 20px;
 }

 #list-info {
 	margin-left: 40px;
 }

 #list-section {
 	border-right: 3px solid;
 	font-family: 'Open Sans Condensed', sans-serif;
 }

 #show-img img {
 	border: 2px solid;
 }

 #contact {
 	margin-top: 90px;
 }

 #iphone {
 	background: url(<%= image_path 'iphone.png' %>);
 	@include background;
 	height: 550px;
 	h1 {
 		font-family: Courgette, cursive;
 		margin-top: 200px;
 	}
 }

 .house img {
 	margin-left: 20px;
 	margin-top: 20px;
 	border-radius: 50%;
 	border: 2px solid white;
 	padding: 20px;
 }




